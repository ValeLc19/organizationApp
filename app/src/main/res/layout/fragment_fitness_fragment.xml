<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/food_textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10dp"
        android:text="Fitness"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <View
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="60dp"
        android:background="#D4C3C3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_fitness_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/fitness_icon" />

        <TextView
            android:id="@+id/workout_textView"
            android:layout_marginStart="10dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Workout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_fitness_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/burn_icon" />

        <TextView
            android:id="@+id/caloric_textView"
            android:layout_marginStart="50dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Caloric Burn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_fitness_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/walk_icon" />

        <TextView
            android:id="@+id/steps_textView"
            android:layout_marginStart="50dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Steps" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_fitness_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/measurement" />

        <TextView
            android:id="@+id/measurements_textView"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:text="Measurements"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_fitness_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/cardio" />

        <TextView
            android:id="@+id/cardio_textView"
            android:layout_marginStart="30dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Cardio Activity" />
    </LinearLayout>
</LinearLayout>