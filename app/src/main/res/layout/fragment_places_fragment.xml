<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/places_textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10dp"
        android:text="Places"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <View
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="60dp"
        android:background="#D4C3C3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_places_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/foodplaces" />

        <TextView
            android:id="@+id/food_textView"
            android:layout_marginStart="10dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Food" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_places_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/entrteinment" />

        <TextView
            android:id="@+id/entertainment_textView"
            android:layout_marginStart="10dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Entertainment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_places_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/key" />

        <TextView
            android:id="@+id/house_textView"
            android:layout_marginStart="10dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="House Services" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_places_button">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/personalserv" />

        <TextView
            android:id="@+id/personal_textView"
            android:layout_marginStart="10dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Personal Services" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/attributes_places_button">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:src="@drawable/extra" />

        <TextView
            android:id="@+id/extra_textView"
            android:layout_marginStart="10dp"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Extra" />
    </LinearLayout>
</LinearLayout>